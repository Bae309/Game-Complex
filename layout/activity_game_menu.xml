<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context=".GameMenu">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="226dp"
        app:srcCompat="@drawable/game_complex_2" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Select Menu"
        android:textAlignment="center"
        android:textSize="40sp" />

    <Button
        android:id="@+id/btn_yacht"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="#FF00DD"
        android:text="Play Yacht"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="5dp" />

    <Button
        android:id="@+id/btn_2048"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="#FF00DD"
        android:text="Play 2048"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="5dp" />

    <Button
        android:id="@+id/MemberInfoButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="#FF00DD"
        android:text="회원정보"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="5dp" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="#FF00DD"
        android:text="로그아웃"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="5dp" />

    <Button
        android:id="@+id/exitButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="#FF00DD"
        android:text="나가기"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="5dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Created by KJA &amp; BSY"
        android:textAlignment="center" />
</LinearLayout>
